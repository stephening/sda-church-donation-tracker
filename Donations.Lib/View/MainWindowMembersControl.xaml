<UserControl x:Class="Donations.Lib.View.MainWindowMembersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Donations.Lib.View"
             mc:Ignorable="d" 
			 KeyDown="UserControl_KeyDown"
			 DataContextChanged="UserControl_DataContextChanged"
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="..\Resources\Strings.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<TabControl x:Name="MainTabControl">
			<TabItem x:Name="MemberTab" Header="{StaticResource MemberTabHeader}">
				<local:DonorView x:Name="DonorView" DataContext="{Binding DonorViewModel}"/>
			</TabItem>
			<TabItem x:Name="DirectoryTabs" Header="{StaticResource DirectoryTabHeader}" Selector.Selected="DirectoryTab_Selected">
				<local:DirectoryTabView x:Name="DirTabsView" DataContext="{Binding DirectoryViewModel}"/>
			</TabItem>
		</TabControl>
	</Grid>
</UserControl>
